<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaAzora.ViewModels.Admin"
        x:Class="AvaloniaAzora.Views.Admin.ClassManagementWindow"
        Title="Azora - Class Management"
        Width="1600" Height="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA"
        x:DataType="vm:ClassManagementViewModel">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" 
                BorderBrush="#E5E7EB" BorderThickness="0,0,0,1"
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="← Back" Margin="0,0,16,0" 
                            Background="Transparent" Foreground="#6B7280"
                            BorderThickness="0" FontSize="14"/>
                    <TextBlock Text="Class Management" FontSize="24" FontWeight="Bold" 
                               Foreground="#1F2937" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12">
                    <Button Content="+ Create Class" 
                            Command="{Binding CreateClassCommand}"
                            Background="#10B981" Foreground="White"
                            Padding="16,8" CornerRadius="6" FontSize="14"/>
                    <Button Content="📊 Reports" 
                            Background="#3B82F6" Foreground="White"
                            Padding="16,8" CornerRadius="6" FontSize="14"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Statistics Cards -->
            <UniformGrid Grid.Row="0" Columns="3" Margin="0,0,0,24">
                <Border Background="White" CornerRadius="12" Margin="0,0,8,0" Padding="24">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" OffsetX="0" OffsetY="2" 
                                          Color="#000000" Opacity="0.05"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Total Classes" FontSize="14" Foreground="#6B7280" Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding TotalClasses}" FontSize="32" FontWeight="Bold" 
                                   Foreground="#1F2937"/>
                        <TextBlock Text="All classrooms" FontSize="12" Foreground="#6B7280"/>
                    </StackPanel>
                </Border>

                <Border Background="White" CornerRadius="12" Margin="8,0,8,0" Padding="24">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" OffsetX="0" OffsetY="2" 
                                          Color="#000000" Opacity="0.05"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Active Classes" FontSize="14" Foreground="#6B7280" Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding ActiveClasses}" FontSize="32" FontWeight="Bold" 
                                   Foreground="#10B981"/>
                        <TextBlock Text="Currently running" FontSize="12" Foreground="#6B7280"/>
                    </StackPanel>
                </Border>

                <Border Background="White" CornerRadius="12" Margin="8,0,0,0" Padding="24">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" OffsetX="0" OffsetY="2" 
                                          Color="#000000" Opacity="0.05"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Archived Classes" FontSize="14" Foreground="#6B7280" Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding ArchivedClasses}" FontSize="32" FontWeight="Bold" 
                                   Foreground="#6B7280"/>
                        <TextBlock Text="Completed courses" FontSize="12" Foreground="#6B7280"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Search and Filter Controls -->
            <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="24" Margin="0,0,0,24">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" OffsetX="0" OffsetY="2" 
                                      Color="#000000" Opacity="0.05"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0" 
                             Text="{Binding SearchText}"
                             Watermark="Search classes by name or description..."
                             FontSize="14" Padding="12,8" Margin="0,0,16,0"/>

                    <CheckBox Grid.Column="1" 
                              IsChecked="{Binding ShowActiveOnly}"
                              Content="Active Only" 
                              FontSize="14" Margin="0,0,16,0" 
                              VerticalAlignment="Center"/>

                    <Button Grid.Column="2" Content="🔍 Search" 
                            Command="{Binding SearchCommand}"
                            Background="#6B7280" Foreground="White"
                            Padding="16,8" CornerRadius="6" FontSize="14" Margin="0,0,8,0"/>

                    <Button Grid.Column="3" Content="🔄 Refresh" 
                            Command="{Binding RefreshCommand}"
                            Background="#10B981" Foreground="White"
                            Padding="16,8" CornerRadius="6" FontSize="14"/>
                </Grid>
            </Border>

            <!-- Classes List -->
            <Border Grid.Row="2" Background="White" CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" OffsetX="0" OffsetY="2" 
                                      Color="#000000" Opacity="0.05"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Table Header -->
                    <Border Grid.Row="0" Background="#F9FAFB" 
                            BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="24,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Class" FontWeight="SemiBold" 
                                       FontSize="14" Foreground="#1F2937"/>
                            <TextBlock Grid.Column="1" Text="Teacher" FontWeight="SemiBold" 
                                       FontSize="14" Foreground="#1F2937"/>
                            <TextBlock Grid.Column="2" Text="Students" FontWeight="SemiBold" 
                                       FontSize="14" Foreground="#1F2937"/>
                            <TextBlock Grid.Column="3" Text="Tests" FontWeight="SemiBold" 
                                       FontSize="14" Foreground="#1F2937"/>
                            <TextBlock Grid.Column="4" Text="Status" FontWeight="SemiBold" 
                                       FontSize="14" Foreground="#1F2937"/>
                            <TextBlock Grid.Column="5" Text="Actions" FontWeight="SemiBold" 
                                       FontSize="14" Foreground="#1F2937"/>
                        </Grid>
                    </Border>

                    <!-- Classes List Content -->
                    <ScrollViewer Grid.Row="1">
                        <ItemsControl ItemsSource="{Binding Classes}" Padding="0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="24,16">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Class Info -->
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding ClassName}" 
                                                           FontWeight="SemiBold" FontSize="14" 
                                                           Foreground="#1F2937"/>
                                                <TextBlock Text="{Binding DisplayDescription}" 
                                                           FontSize="12" Foreground="#6B7280"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>

                                            <!-- Teacher -->
                                            <TextBlock Grid.Column="1" 
                                                       Text="{Binding TeacherName}" 
                                                       FontSize="14" Foreground="#6B7280"
                                                       VerticalAlignment="Center"/>

                                            <!-- Student Count -->
                                            <Border Grid.Column="2" 
                                                    Background="#E1F1FC" 
                                                    CornerRadius="4" Padding="8,4" 
                                                    HorizontalAlignment="Left" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding StudentCount}" 
                                                           FontSize="12" FontWeight="SemiBold" 
                                                           Foreground="#3B82F6"/>
                                            </Border>

                                            <!-- Test Count -->
                                            <Border Grid.Column="3" 
                                                    Background="#FEF3E2" 
                                                    CornerRadius="4" Padding="8,4" 
                                                    HorizontalAlignment="Left" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding TestCount}" 
                                                           FontSize="12" FontWeight="SemiBold" 
                                                           Foreground="#F59E0B"/>
                                            </Border>

                                            <!-- Status -->
                                            <Border Grid.Column="4" 
                                                    Background="{Binding StatusColor}" 
                                                    CornerRadius="4" Padding="8,4" 
                                                    HorizontalAlignment="Left" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding IsActive, Converter={x:Static BooleanToStringConverter.Instance}, ConverterParameter='Active|Archived'}" 
                                                           FontSize="12" FontWeight="SemiBold" 
                                                           Foreground="White"/>
                                            </Border>

                                            <!-- Actions -->
                                            <StackPanel Grid.Column="5" Orientation="Horizontal" Spacing="8">
                                                <Button Content="✏️" 
                                                        Command="{Binding EditCommand}"
                                                        ToolTip.Tip="Edit Class"
                                                        Background="Transparent" 
                                                        BorderThickness="1" BorderBrush="#D1D5DB"
                                                        Width="32" Height="32" CornerRadius="4"/>
                                                <Button Content="👥" 
                                                        Command="{Binding ViewEnrollmentsCommand}"
                                                        ToolTip.Tip="Manage Students"
                                                        Background="Transparent" 
                                                        BorderThickness="1" BorderBrush="#D1D5DB"
                                                        Width="32" Height="32" CornerRadius="4"/>
                                                <Button Content="📦" 
                                                        Command="{Binding ArchiveCommand}"
                                                        ToolTip.Tip="Archive Class"
                                                        Background="Transparent" 
                                                        BorderThickness="1" BorderBrush="#D1D5DB"
                                                        Width="32" Height="32" CornerRadius="4"/>
                                                <Button Content="🗑️" 
                                                        Command="{Binding DeleteCommand}"
                                                        ToolTip.Tip="Delete Class"
                                                        Background="Transparent" 
                                                        BorderThickness="1" BorderBrush="#EF4444"
                                                        Foreground="#EF4444"
                                                        Width="32" Height="32" CornerRadius="4"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Loading Overlay -->
            <Border Grid.Row="0" Grid.RowSpan="3" 
                    Background="#80000000" 
                    IsVisible="{Binding IsLoading}"
                    CornerRadius="12">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="⟳ Loading..." FontSize="18" Foreground="White" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Success/Error Messages -->
            <Border Grid.Row="0" Grid.RowSpan="3" 
                    IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                    Background="#80000000" CornerRadius="12">
                <Border Background="White" CornerRadius="8" Padding="24" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="400">
                    <StackPanel>
                        <TextBlock Text="❌ Error" FontSize="18" FontWeight="Bold" 
                                   Foreground="#EF4444" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding ErrorMessage}" FontSize="14" 
                                   Foreground="#6B7280" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                        <Button Content="OK" Margin="0,16,0,0" HorizontalAlignment="Center"
                                Background="#EF4444" Foreground="White" Padding="24,8" CornerRadius="6"/>
                    </StackPanel>
                </Border>
            </Border>

            <Border Grid.Row="0" Grid.RowSpan="3" 
                    IsVisible="{Binding SuccessMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                    Background="#80000000" CornerRadius="12">
                <Border Background="White" CornerRadius="8" Padding="24" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="400">
                    <StackPanel>
                        <TextBlock Text="✅ Success" FontSize="18" FontWeight="Bold" 
                                   Foreground="#10B981" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding SuccessMessage}" FontSize="14" 
                                   Foreground="#6B7280" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                        <Button Content="OK" Margin="0,16,0,0" HorizontalAlignment="Center"
                                Background="#10B981" Foreground="White" Padding="24,8" CornerRadius="6"/>
                    </StackPanel>
                </Border>
            </Border>
        </Grid>
    </Grid>
</Window>
