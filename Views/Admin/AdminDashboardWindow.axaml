<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaAzora.ViewModels"
        x:Class="AvaloniaAzora.Views.AdminDashboardWindow"
        Title="Azora - Admin Dashboard"
        Width="1400" Height="900"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA"
        x:DataType="vm:AdminDashboardViewModel">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" 
                BorderBrush="#E5E7EB" BorderThickness="0,0,0,1"
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="🎓" FontSize="32" Margin="0,0,12,0" VerticalAlignment="Center"/>
                    <StackPanel>
                        <TextBlock Text="Azora Admin" FontSize="20" FontWeight="Bold" Foreground="#1F2937"/>
                        <TextBlock Text="Educational Platform Administration" FontSize="12" Foreground="#6B7280"/>
                    </StackPanel>
                </StackPanel>

                <TextBlock Grid.Column="1" Text="{Binding WelcomeMessage}" 
                           FontSize="16" FontWeight="Medium" Foreground="#374151"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12">
                    <Border Background="{Binding SystemStatusColor}" CornerRadius="4" Padding="8,4">
                        <TextBlock Text="{Binding SystemStatus}" FontSize="12" FontWeight="SemiBold" Foreground="White"/>
                    </Border>
                    <Button Content="🔄 Refresh" Command="{Binding RefreshDataCommand}"
                            Background="#6B7280" Foreground="White" Padding="12,6" CornerRadius="4"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Padding="24">
            <StackPanel Spacing="24">

                <!-- Statistics Overview -->
                <StackPanel>
                    <TextBlock Text="System Overview" FontSize="18" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,16"/>
                    <UniformGrid Columns="3" Spacing="16">
                        <!-- Users Statistics -->
                        <Border Background="White" CornerRadius="12" Padding="20">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" OffsetX="0" OffsetY="2" Color="#000000" Opacity="0.05"/>
                            </Border.Effect>
                            <StackPanel>
                                <Grid Margin="0,0,0,12">
                                    <TextBlock Text="👥 Users" FontSize="14" Foreground="#6B7280" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding TotalUsers}" FontSize="24" FontWeight="Bold" 
                                               Foreground="#1F2937" HorizontalAlignment="Right"/>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding StudentsCount}" FontSize="16" FontWeight="SemiBold" Foreground="#10B981"/>
                                        <TextBlock Text="Students" FontSize="10" Foreground="#6B7280"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding TeachersCount}" FontSize="16" FontWeight="SemiBold" Foreground="#3B82F6"/>
                                        <TextBlock Text="Teachers" FontSize="10" Foreground="#6B7280"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="{Binding AdminsCount}" FontSize="16" FontWeight="SemiBold" Foreground="#8B5CF6"/>
                                        <TextBlock Text="Admins" FontSize="10" Foreground="#6B7280"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Classes Statistics -->
                        <Border Background="White" CornerRadius="12" Padding="20">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" OffsetX="0" OffsetY="2" Color="#000000" Opacity="0.05"/>
                            </Border.Effect>
                            <StackPanel>
                                <Grid Margin="0,0,0,12">
                                    <TextBlock Text="🏫 Classes" FontSize="14" Foreground="#6B7280" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding TotalClasses}" FontSize="24" FontWeight="Bold" 
                                               Foreground="#1F2937" HorizontalAlignment="Right"/>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding ActiveClasses}" FontSize="16" FontWeight="SemiBold" Foreground="#10B981"/>
                                        <TextBlock Text="Active" FontSize="10" Foreground="#6B7280"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding TotalClasses}" FontSize="16" FontWeight="SemiBold" Foreground="#6B7280"/>
                                        <TextBlock Text="Total" FontSize="10" Foreground="#6B7280"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Tests Statistics -->
                        <Border Background="White" CornerRadius="12" Padding="20">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" OffsetX="0" OffsetY="2" Color="#000000" Opacity="0.05"/>
                            </Border.Effect>
                            <StackPanel>
                                <Grid Margin="0,0,0,12">
                                    <TextBlock Text="📝 Tests" FontSize="14" Foreground="#6B7280" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding TotalTests}" FontSize="24" FontWeight="Bold" 
                                               Foreground="#1F2937" HorizontalAlignment="Right"/>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding ActiveTests}" FontSize="16" FontWeight="SemiBold" Foreground="#F59E0B"/>
                                        <TextBlock Text="Active" FontSize="10" Foreground="#6B7280"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding TotalTests}" FontSize="16" FontWeight="SemiBold" Foreground="#6B7280"/>
                                        <TextBlock Text="Total" FontSize="10" Foreground="#6B7280"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </UniformGrid>
                </StackPanel>

                <!-- Management Actions -->
                <StackPanel>
                    <TextBlock Text="Management Tools" FontSize="18" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,16"/>
                    <UniformGrid Columns="2" Spacing="16">
                        
                        <!-- User Management Section -->
                        <Border Background="White" CornerRadius="12" Padding="20">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" OffsetX="0" OffsetY="2" Color="#000000" Opacity="0.05"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="👥 User Management" FontSize="16" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,8"/>
                                <TextBlock Text="Manage students, teachers, and administrators" FontSize="12" Foreground="#6B7280" Margin="0,0,0,16"/>
                                <UniformGrid Columns="1" Spacing="8">
                                    <Button Content="👨‍🎓 Manage Students" Command="{Binding ManageStudentsCommand}"
                                            Background="#10B981" Foreground="White" Padding="12,8" CornerRadius="6"/>
                                    <Button Content="👨‍🏫 Manage Teachers" Command="{Binding ManageTeachersCommand}"
                                            Background="#3B82F6" Foreground="White" Padding="12,8" CornerRadius="6"/>
                                    <Button Content="👥 All Users" Command="{Binding ManageUsersCommand}"
                                            Background="#6B7280" Foreground="White" Padding="12,8" CornerRadius="6"/>
                                </UniformGrid>
                            </StackPanel>
                        </Border>

                        <!-- Academic Management Section -->
                        <Border Background="White" CornerRadius="12" Padding="20">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" OffsetX="0" OffsetY="2" Color="#000000" Opacity="0.05"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="🏫 Academic Management" FontSize="16" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,8"/>
                                <TextBlock Text="Manage classrooms, tests, and content" FontSize="12" Foreground="#6B7280" Margin="0,0,0,16"/>
                                <UniformGrid Columns="1" Spacing="8">
                                    <Button Content="🏫 Manage Classrooms" Command="{Binding ManageClassesCommand}"
                                            Background="#8B5CF6" Foreground="White" Padding="12,8" CornerRadius="6"/>
                                    <Button Content="📝 Manage Tests" Command="{Binding ManageTestsCommand}"
                                            Background="#F59E0B" Foreground="White" Padding="12,8" CornerRadius="6"/>
                                    <Button Content="❓ Question Bank" Command="{Binding ManageQuestionsCommand}"
                                            Background="#EF4444" Foreground="White" Padding="12,8" CornerRadius="6"/>
                                </UniformGrid>
                            </StackPanel>
                        </Border>

                        <!-- System Management Section -->
                        <Border Background="White" CornerRadius="12" Padding="20">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" OffsetX="0" OffsetY="2" Color="#000000" Opacity="0.05"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="⚙️ System Management" FontSize="16" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,8"/>
                                <TextBlock Text="Configure system settings and security" FontSize="12" Foreground="#6B7280" Margin="0,0,0,16"/>
                                <UniformGrid Columns="1" Spacing="8">
                                    <Button Content="⚙️ System Settings" Command="{Binding SystemSettingsCommand}"
                                            Background="#374151" Foreground="White" Padding="12,8" CornerRadius="6"/>
                                    <Button Content="📊 View Reports" Command="{Binding ViewReportsCommand}"
                                            Background="#059669" Foreground="White" Padding="12,8" CornerRadius="6"/>
                                    <Button Content="📋 Activity Logs" Command="{Binding ViewLogsCommand}"
                                            Background="#7C3AED" Foreground="White" Padding="12,8" CornerRadius="6"/>
                                </UniformGrid>
                            </StackPanel>
                        </Border>

                        <!-- Assessment Management Section -->
                        <Border Background="White" CornerRadius="12" Padding="20">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" OffsetX="0" OffsetY="2" Color="#000000" Opacity="0.05"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="📊 Assessment Management" FontSize="16" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,8"/>
                                <TextBlock Text="Monitor student performance and results" FontSize="12" Foreground="#6B7280" Margin="0,0,0,16"/>
                                <UniformGrid Columns="1" Spacing="8">
                                    <Button Content="📈 Student Results" Command="{Binding ManageAssessmentsCommand}"
                                            Background="#DC2626" Foreground="White" Padding="12,8" CornerRadius="6"/>
                                    <Button Content="📊 Performance Analytics" Command="{Binding ViewAnalyticsCommand}"
                                            Background="#7C2D12" Foreground="White" Padding="12,8" CornerRadius="6"/>
                                    <Button Content="📁 Bulk Operations" Command="{Binding BulkOperationsCommand}"
                                            Background="#1F2937" Foreground="White" Padding="12,8" CornerRadius="6"/>
                                </UniformGrid>
                            </StackPanel>
                        </Border>
                    </UniformGrid>
                </StackPanel>

                <!-- Recent Activities -->
                <StackPanel>
                    <TextBlock Text="Recent Activities" FontSize="18" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,16"/>
                    <Border Background="White" CornerRadius="12" Padding="20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" OffsetX="0" OffsetY="2" Color="#000000" Opacity="0.05"/>
                        </Border.Effect>
                        <StackPanel>
                            <ItemsControl ItemsSource="{Binding RecentActivities}" MaxHeight="300">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="0,12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0" Background="{Binding ActivityColor}" 
                                                        Width="8" Height="8" CornerRadius="4" Margin="0,4,12,0"/>

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding ActivityTitle}" FontWeight="SemiBold" 
                                                               FontSize="14" Foreground="#1F2937"/>
                                                    <TextBlock Text="{Binding ActivityDescription}" FontSize="12" 
                                                               Foreground="#6B7280"/>
                                                </StackPanel>

                                                <TextBlock Grid.Column="2" Text="{Binding TimeAgo}" FontSize="12" 
                                                           Foreground="#9CA3AF" VerticalAlignment="Top"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Show message if no activities -->
                            <TextBlock Text="No recent activities to display" FontSize="14" Foreground="#6B7280" 
                                       HorizontalAlignment="Center" Margin="0,20,0,0"
                                       IsVisible="{Binding !RecentActivities.Count}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="2" Background="#80000000" IsVisible="{Binding IsLoading}">
            <Border Background="White" CornerRadius="8" Padding="32" 
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <TextBlock Text="⟳" FontSize="24" Foreground="#3B82F6"/>
                    <TextBlock Text="Loading dashboard data..." FontSize="16" Foreground="#1F2937" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
