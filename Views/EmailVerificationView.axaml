<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:AvaloniaAzora.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="AvaloniaAzora.Views.EmailVerificationView"
             x:DataType="vm:EmailVerificationViewModel">

    <Design.DataContext>
        <vm:EmailVerificationViewModel/>
    </Design.DataContext>

    <Grid Background="#F5F7FA">
        <Border Background="White"
                CornerRadius="12"
                BoxShadow="0 4 25 0 #00000015"
                Padding="40"
                Width="400"
                MaxWidth="400"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            
            <StackPanel>
                <!-- Icon -->
                <Border Width="64"
                        Height="64"
                        CornerRadius="32"
                        Background="#DCFCE7"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0,0,0,24">
                    <Path Fill="#16A34A"
                          Width="24" Height="24"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Data="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.89 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                </Border>

                <!-- Title -->
                <TextBlock Text="Email Verification" 
                           FontSize="28"
                           FontWeight="SemiBold"
                           Foreground="#1F2937"
                           TextAlignment="Center"
                           Margin="0,0,0,8"/>
                
                <TextBlock Text="Please enter the verification code sent to your email address" 
                           FontSize="14"
                           Foreground="#6B7280"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,0,0,32"/>

                <!-- Verification Code Field -->
                <StackPanel>
                    <TextBlock Text="Verification Code" 
                               FontSize="14"
                               FontWeight="Medium"
                               Foreground="#1F2937"
                               Margin="0,0,0,8"/>
                    
                    <TextBox Text="{Binding VerificationCode}"
                             Watermark="Enter 6-digit code"
                             Height="48"
                             Padding="16,12"
                             FontSize="14"
                             BorderBrush="#E5E7EB"
                             BorderThickness="1"
                             CornerRadius="8"
                             Background="White"
                             Margin="0,0,0,16"/>
                </StackPanel>

                <!-- Verify Button -->
                <Button Content="Verify"
                        Command="{Binding VerifyCommand}"
                        Height="48"
                        Background="#4F7CFF"
                        Foreground="White"
                        BorderThickness="0"
                        CornerRadius="8"
                        FontSize="14"
                        FontWeight="Medium"
                        Margin="0,8,0,16"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center">
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="#3A5FE0"/>
                        </Style>
                    </Button.Styles>
                </Button>

                <!-- Resend Code -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,16">
                    <TextBlock Text="Didn't receive the code?"
                               FontSize="14"
                               Foreground="#6B7280"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>
                    
                    <Button Content="Resend code"
                            Command="{Binding ResendCodeCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#4F7CFF"
                            FontSize="14"
                            Padding="0"
                            HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Back to Sign In -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button Content="Back to Sign In"
                            Command="{Binding BackToSignInCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#6B7280"
                            FontSize="14"
                            Padding="0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl> 