<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaAzora.ViewModels.Student"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="700"
        x:Class="AvaloniaAzora.Views.Student.TestDetailWindow"
        x:DataType="vm:TestDetailViewModel"
        Title="{Binding TestTitle, StringFormat='Test: {0}'}"
        Width="800" Height="700"
        Background="#F8FAFC"
        WindowStartupLocation="CenterOwner">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Content -->
        <Border Grid.Row="0" Background="White" BoxShadow="0 2 10 0 #0000000A" Padding="20">
            <StackPanel HorizontalAlignment="Center">
                <Border Width="80" Height="80" Background="#3B82F6" CornerRadius="40" Margin="0,0,0,20">
                    <TextBlock Text="ðŸ“š" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="{Binding TestTitle}" 
                           FontSize="32" FontWeight="Bold" 
                           Foreground="#1F2937" 
                           TextAlignment="Center"
                           Margin="0,0,0,8"/>
                <TextBlock Text="Mathematics 101" 
                           FontSize="16" Foreground="#6B7280" 
                           TextAlignment="Center"
                           Margin="0,0,0,20"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Padding="32">
            <StackPanel MaxWidth="600" HorizontalAlignment="Center">
                
                <!-- Instructions Panel -->
                <Border Background="#F0F9FF" CornerRadius="16" Padding="24" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="Instructions" 
                                   FontSize="20" FontWeight="SemiBold" 
                                   Foreground="#1F2937" 
                                   Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Read each question carefully. You have 45 minutes to complete this quiz. Make sure to answer all questions before submitting." 
                                   FontSize="14" Foreground="#374151" TextWrapping="Wrap"
                                   Margin="0,0,0,16"/>

                        <StackPanel Spacing="12">
                            <TextBlock Text="â€¢ Read each question carefully. You have the full time limit to complete this test." 
                                      FontSize="14" Foreground="#374151" TextWrapping="Wrap"/>
                            <TextBlock Text="â€¢ Make sure to answer all questions before submitting." 
                                      FontSize="14" Foreground="#374151" TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Quiz Stats -->
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Questions -->
                    <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="16" Margin="4">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="8" 
                                       FontSize="40" FontWeight="Bold" 
                                       Foreground="#1F2937" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Questions" 
                                       FontSize="14" Foreground="#6B7280" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Time Limit -->
                    <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="16" Margin="4">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock FontSize="40" FontWeight="Bold" 
                                       Foreground="#1F2937" 
                                       HorizontalAlignment="Center">
                                <Run Text="45"/>
                            </TextBlock>
                            <TextBlock Text="Minutes" 
                                       FontSize="14" Foreground="#6B7280" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Total Points -->
                    <Border Grid.Column="2" Background="White" CornerRadius="12" Padding="16" Margin="4">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="53" 
                                       FontSize="40" FontWeight="Bold" 
                                       Foreground="#1F2937" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Total Points" 
                                       FontSize="14" Foreground="#6B7280" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Question Types -->
                <Border Background="White" CornerRadius="16" Padding="24" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="Question Types:" 
                                  FontSize="18" FontWeight="SemiBold" 
                                  Foreground="#1F2937" 
                                  Margin="0,0,0,16"/>

                        <!-- Multiple Choice -->
                        <Border Background="#F9FAFB" CornerRadius="8" Padding="16" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <Border Grid.Column="0" 
                                        Background="#3B82F6" 
                                        CornerRadius="4" 
                                        Width="12" Height="12" 
                                        Margin="0,0,12,0"/>
                                
                                <TextBlock Grid.Column="1" 
                                          Text="Multiple Choice" 
                                          FontSize="14" FontWeight="Medium" 
                                          Foreground="#1F2937" 
                                          VerticalAlignment="Center"/>
                                
                                <TextBlock Grid.Column="2" 
                                          Text="4 questions" 
                                          FontSize="14" 
                                          Foreground="#6B7280" 
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- True/False -->
                        <Border Background="#F9FAFB" CornerRadius="8" Padding="16" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <Border Grid.Column="0" 
                                        Background="#10B981" 
                                        CornerRadius="4" 
                                        Width="12" Height="12" 
                                        Margin="0,0,12,0"/>
                                
                                <TextBlock Grid.Column="1" 
                                          Text="True/False" 
                                          FontSize="14" FontWeight="Medium" 
                                          Foreground="#1F2937" 
                                          VerticalAlignment="Center"/>
                                
                                <TextBlock Grid.Column="2" 
                                          Text="4 questions" 
                                          FontSize="14" 
                                          Foreground="#6B7280" 
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Short Answer -->
                        <Border Background="#F9FAFB" CornerRadius="8" Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <Border Grid.Column="0" 
                                        Background="#F59E0B" 
                                        CornerRadius="4" 
                                        Width="12" Height="12" 
                                        Margin="0,0,12,0"/>
                                
                                <TextBlock Grid.Column="1" 
                                          Text="Short Answer" 
                                          FontSize="14" FontWeight="Medium" 
                                          Foreground="#1F2937" 
                                          VerticalAlignment="Center"/>
                                
                                <TextBlock Grid.Column="2" 
                                          Text="0 questions" 
                                          FontSize="14" 
                                          Foreground="#6B7280" 
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Start Test Button -->
                <Button Content="Start Test"
                        Classes="primary"
                        FontSize="18" FontWeight="SemiBold"
                        Padding="32,16"
                        Margin="0,32,0,100"
                        HorizontalAlignment="Center"
                        Command="{Binding StartTestCommand}"
                        IsEnabled="{Binding CanStartTest}">
                    <Button.Styles>
                        <Style Selector="Button.primary">
                            <Setter Property="Background" Value="#3B82F6"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                        <Style Selector="Button.primary:pointerover">
                            <Setter Property="Background" Value="#2563EB"/>
                        </Style>
                        <Style Selector="Button.primary:pressed">
                            <Setter Property="Background" Value="#1D4ED8"/>
                        </Style>
                        <Style Selector="Button.primary:disabled">
                            <Setter Property="Background" Value="#9CA3AF"/>
                            <Setter Property="Opacity" Value="0.6"/>
                        </Style>
                    </Button.Styles>
                </Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window> 