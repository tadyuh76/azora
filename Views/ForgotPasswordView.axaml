<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:AvaloniaAzora.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="AvaloniaAzora.Views.ForgotPasswordView"
             x:DataType="vm:ForgotPasswordViewModel">

    <Design.DataContext>
        <vm:ForgotPasswordViewModel/>
    </Design.DataContext>

    <Grid Background="#F5F7FA">
        <Border Background="White"
                CornerRadius="12"
                BoxShadow="0 4 25 0 #00000015"
                Padding="40"
                Width="400"
                MaxWidth="400"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            
            <StackPanel>
                <!-- Icon -->
                <Border Width="64"
                        Height="64"
                        CornerRadius="32"
                        Background="#E0E7FF"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0,0,0,24">
                    <Path Fill="#4F7CFF"
                          Width="24" Height="24"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Data="M12 2L2 7v10c0 5.55 3.84 9.739 9 11 5.16-1.261 9-5.45 9-11V7l-10-5z"/>
                </Border>

                <!-- Title -->
                <TextBlock Text="Forgot Password" 
                           FontSize="28"
                           FontWeight="SemiBold"
                           Foreground="#1F2937"
                           TextAlignment="Center"
                           Margin="0,0,0,8"/>
                
                <TextBlock Text="Enter your email address and we'll send you a link to reset your password" 
                           FontSize="14"
                           Foreground="#6B7280"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,0,0,32"/>

                <!-- Email Field -->
                <TextBlock Text="Email" 
                           FontSize="14"
                           FontWeight="Medium"
                           Foreground="#1F2937"
                           Margin="0,0,0,8"/>
                
                <TextBox Text="{Binding Email}"
                         Watermark="Enter your email"
                         Height="48"
                         Padding="16,12"
                         FontSize="14"
                         BorderBrush="#E5E7EB"
                         BorderThickness="1"
                         CornerRadius="8"
                         Background="White"
                         Margin="0,0,0,16"/>

                <!-- Send Reset Button -->
                <Button Content="Send Reset Instructions"
                        Command="{Binding SendResetInstructionsCommand}"
                        Height="48"
                        Background="#4F7CFF"
                        Foreground="White"
                        BorderThickness="0"
                        CornerRadius="8"
                        FontSize="14"
                        FontWeight="Medium"
                        Margin="0,8,0,16"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center">
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="#3A5FE0"/>
                        </Style>
                    </Button.Styles>
                </Button>

                <!-- Back to Sign In -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Remember your password? "
                               FontSize="14"
                               Foreground="#6B7280"/>
                    <Button Content="Back to Sign In"
                            Command="{Binding BackToSignInCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#4F7CFF"
                            FontSize="14"
                            Padding="0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl> 