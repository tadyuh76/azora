<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:AvaloniaAzora.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="AvaloniaAzora.Views.Auth.ForgotPasswordView"
             x:DataType="vm:ForgotPasswordViewModel">

    <Design.DataContext>
        <vm:ForgotPasswordViewModel/>
    </Design.DataContext>

    <Grid Background="#F5F7FA">
        <Border Background="White"
                CornerRadius="12"
                BoxShadow="0 4 25 0 #00000015"
                Padding="40"
                Width="600"
                MaxWidth="600"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            
            <StackPanel>
                <!-- Logo -->
                <Image Source="/Assets/logo.png"
                       Width="80"
                       Height="80"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,24"/>

                <!-- Title -->
                <TextBlock Text="Forgot Password" 
                           FontSize="28"
                           FontWeight="SemiBold"
                           Foreground="#1F2937"
                           TextAlignment="Center"
                           Margin="0,0,0,8"/>
                
                <TextBlock Text="Enter your email address and we'll send you a link to reset your password" 
                           FontSize="14"
                           Foreground="#6B7280"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,0,0,16"/>

                <!-- Error/Success Message -->
                <Border Background="#FEF2F2" 
                        BorderBrush="#F87171" 
                        BorderThickness="1" 
                        CornerRadius="6" 
                        Padding="12,8" 
                        Margin="0,0,0,16"
                        IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <TextBlock Text="{Binding ErrorMessage}" 
                               FontSize="14" 
                               Foreground="#B91C1C" 
                               TextWrapping="Wrap"/>
                </Border>

                <Border Background="#F0FDF4" 
                        BorderBrush="#4ADE80" 
                        BorderThickness="1" 
                        CornerRadius="6" 
                        Padding="12,8" 
                        Margin="0,0,0,16"
                        IsVisible="{Binding IsSuccess}">
                    <TextBlock Text="{Binding SuccessMessage}" 
                               FontSize="14" 
                               Foreground="#15803D" 
                               TextWrapping="Wrap"/>
                </Border>

                <!-- Email Field -->
                <TextBlock Text="Email" 
                           FontSize="14"
                           FontWeight="Medium"
                           Foreground="#1F2937"
                           Margin="0,0,0,8"/>
                
                <TextBox Text="{Binding Email}"
                         Watermark="Enter your email"
                         Height="48"
                         Padding="16,12"
                         FontSize="14"
                         BorderBrush="#E5E7EB"
                         BorderThickness="1"
                         CornerRadius="8"
                         Background="White"
                         Margin="0,0,0,16"/>

                <!-- Send Reset Button -->
                <Button Height="48"
                        Classes="primary"
                        CornerRadius="8"
                        FontSize="14"
                        Margin="0,8,0,16"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Command="{Binding SendResetInstructionsCommand}"
                        IsEnabled="{Binding IsLoading, Converter={x:Static BoolConverters.Not}}">
                    
                    <Button.Styles>
                        <Style Selector="Button:disabled">
                            <Setter Property="Background" Value="#9CA3AF"/>
                        </Style>
                    </Button.Styles>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="â³" 
                                   FontSize="14" 
                                   Margin="0,0,8,0"
                                   IsVisible="{Binding IsLoading}"/>
                        <TextBlock Text="Sending Email..." 
                                   FontSize="14"
                                   IsVisible="{Binding IsLoading}"/>
                        <TextBlock Text="Send Reset Instructions" 
                                   FontSize="14"
                                   IsVisible="{Binding IsLoading, Converter={x:Static BoolConverters.Not}}"/>
                    </StackPanel>
                </Button>

                <!-- Back to Sign In -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Remember your password? "
                               FontSize="14"
                               Foreground="#6B7280"/>
                    <Button Content="Back to Sign In"
                            Command="{Binding BackToSignInCommand}"
                            Classes="link"
                            FontSize="14"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl> 