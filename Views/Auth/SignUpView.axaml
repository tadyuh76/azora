<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:AvaloniaAzora.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="AvaloniaAzora.Views.Auth.SignUpView"
             x:DataType="vm:SignUpViewModel">

    <Design.DataContext>
        <vm:SignUpViewModel/>
    </Design.DataContext>

    <Grid Background="#F5F7FA">
        <Border Background="White"
                CornerRadius="12"
                BoxShadow="0 4 25 0 #00000015"
                Padding="40"
                Width="400"
                MaxWidth="400"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            
            <StackPanel>
                <!-- Title -->
                <TextBlock Text="Create Account" 
                           FontSize="28"
                           FontWeight="SemiBold"
                           Foreground="#1F2937"
                           TextAlignment="Center"
                           Margin="0,0,0,8"/>
                
                <TextBlock Text="Sign up to get started" 
                           FontSize="14"
                           Foreground="#6B7280"
                           TextAlignment="Center"
                           Margin="0,0,0,16"/>

                <!-- Error/Success Message -->
                <Border Background="#FEF2F2" 
                        BorderBrush="#F87171" 
                        BorderThickness="1" 
                        CornerRadius="6" 
                        Padding="12,8" 
                        Margin="0,0,0,16"
                        IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <TextBlock Text="{Binding ErrorMessage}" 
                               FontSize="14" 
                               Foreground="#B91C1C" 
                               TextWrapping="Wrap"/>
                </Border>

                <Border Background="#F0FDF4" 
                        BorderBrush="#4ADE80" 
                        BorderThickness="1" 
                        CornerRadius="6" 
                        Padding="12,8" 
                        Margin="0,0,0,16"
                        IsVisible="{Binding IsSuccess}">
                    <TextBlock Text="Account created successfully! Please check your email for verification." 
                               FontSize="14" 
                               Foreground="#15803D" 
                               TextWrapping="Wrap"/>
                </Border>

                <!-- Full Name Field -->
                <TextBlock Text="Full Name" 
                           FontSize="14"
                           FontWeight="Medium"
                           Foreground="#1F2937"
                           Margin="0,0,0,8"/>
                
                <TextBox Text="{Binding FullName}"
                         Watermark="Enter your full name"
                         Height="48"
                         Padding="16,12"
                         FontSize="14"
                         BorderBrush="#E5E7EB"
                         BorderThickness="1"
                         CornerRadius="8"
                         Background="White"
                         Margin="0,0,0,16"/>

                <!-- Email Field -->
                <TextBlock Text="Email" 
                           FontSize="14"
                           FontWeight="Medium"
                           Foreground="#1F2937"
                           Margin="0,0,0,8"/>
                
                <TextBox Text="{Binding Email}"
                         Watermark="Enter your email"
                         Height="48"
                         Padding="16,12"
                         FontSize="14"
                         BorderBrush="#E5E7EB"
                         BorderThickness="1"
                         CornerRadius="8"
                         Background="White"
                         Margin="0,0,0,16"/>

                <!-- Password Field -->
                <TextBlock Text="Password" 
                           FontSize="14"
                           FontWeight="Medium"
                           Foreground="#1F2937"
                           Margin="0,0,0,8"/>
                
                <TextBox Text="{Binding Password}"
                         Watermark="Enter your password"
                         PasswordChar="●"
                         Height="48"
                         Padding="16,12"
                         FontSize="14"
                         BorderBrush="#E5E7EB"
                         BorderThickness="1"
                         CornerRadius="8"
                         Background="White"
                         Margin="0,0,0,16"/>

                <!-- Confirm Password Field -->
                <TextBlock Text="Confirm Password" 
                           FontSize="14"
                           FontWeight="Medium"
                           Foreground="#1F2937"
                           Margin="0,0,0,8"/>
                
                <TextBox Text="{Binding ConfirmPassword}"
                         Watermark="Confirm your password"
                         PasswordChar="●"
                         Height="48"
                         Padding="16,12"
                         FontSize="14"
                         BorderBrush="#E5E7EB"
                         BorderThickness="1"
                         CornerRadius="8"
                         Background="White"
                         Margin="0,0,0,16"/>

                <!-- Terms Agreement -->
                <CheckBox IsChecked="{Binding AgreeToTerms}"
                          FontSize="14"
                          Foreground="#1F2937"
                          Margin="0,0,0,16">
                    <CheckBox.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="I agree to the " Foreground="#1F2937"/>
                            <Button Content="Terms &amp; Conditions"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="#4F7CFF"
                                    FontSize="14"
                                    Padding="0"/>
                            <TextBlock Text=" and " Foreground="#1F2937"/>
                            <Button Content="Privacy Policy"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="#4F7CFF"
                                    FontSize="14"
                                    Padding="0"/>
                        </StackPanel>
                    </CheckBox.Content>
                </CheckBox>

                <!-- Create Account Button -->
                <Button Height="48"
                        Background="#4F7CFF"
                        Foreground="White"
                        BorderThickness="0"
                        CornerRadius="8"
                        FontSize="14"
                        FontWeight="Medium"
                        Margin="0,8,0,16"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Command="{Binding CreateAccountCommand}"
                        IsEnabled="{Binding IsLoading, Converter={x:Static BoolConverters.Not}}">
                    
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="#3A5FE0"/>
                        </Style>
                        <Style Selector="Button:disabled">
                            <Setter Property="Background" Value="#9CA3AF"/>
                        </Style>
                    </Button.Styles>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="⏳" 
                                   FontSize="14" 
                                   Margin="0,0,8,0"
                                   IsVisible="{Binding IsLoading}"/>
                        <TextBlock Text="Creating Account..." 
                                   FontSize="14"
                                   IsVisible="{Binding IsLoading}"/>
                        <TextBlock Text="Create Account" 
                                   FontSize="14"
                                   IsVisible="{Binding IsLoading, Converter={x:Static BoolConverters.Not}}"/>
                    </StackPanel>
                </Button>

                <!-- Sign In Link -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Already have an account? "
                               FontSize="14"
                               Foreground="#6B7280"/>
                    <Button Content="Sign in"
                            Command="{Binding SignInCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#4F7CFF"
                            FontSize="14"
                            Padding="0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl> 