<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:AvaloniaAzora.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="AvaloniaAzora.Views.Auth.SignInView"
             x:DataType="vm:SignInViewModel">

    <Design.DataContext>
        <vm:SignInViewModel/>
    </Design.DataContext>

    <Grid Background="#F5F7FA">
        <Border Background="White"
                CornerRadius="12"
                BoxShadow="0 4 25 0 #00000015"
                Padding="40"
                Width="400"
                MaxWidth="400"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            
            <StackPanel>
                <!-- Logo -->
                <Image Source="/Assets/logo.png"
                       Width="80"
                       Height="80"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,24"/>
                
                <!-- Title -->
                <TextBlock Text="Welcome back" 
                           FontSize="28"
                           FontWeight="SemiBold"
                           Foreground="#1F2937"
                           TextAlignment="Center"
                           Margin="0,0,0,8"/>
                
                <TextBlock Text="Sign in to your account to continue" 
                           FontSize="14"
                           Foreground="#6B7280"
                           TextAlignment="Center"
                           Margin="0,0,0,16"/>

                <!-- Error/Success Message -->
                <Border Background="#FEF2F2" 
                        BorderBrush="#F87171" 
                        BorderThickness="1" 
                        CornerRadius="6" 
                        Padding="12,8" 
                        Margin="0,0,0,16"
                        IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <TextBlock Text="{Binding ErrorMessage}" 
                               FontSize="14" 
                               Foreground="#B91C1C" 
                               TextWrapping="Wrap"/>
                </Border>

                <Border Background="#F0FDF4" 
                        BorderBrush="#4ADE80" 
                        BorderThickness="1" 
                        CornerRadius="6" 
                        Padding="12,8" 
                        Margin="0,0,0,16"
                        IsVisible="{Binding IsSuccess}">
                    <TextBlock Text="{Binding SuccessMessage}" 
                               FontSize="14" 
                               Foreground="#15803D" 
                               TextWrapping="Wrap"/>
                </Border>

                <!-- Email Field -->
                <TextBlock Text="Email" 
                           FontSize="14"
                           FontWeight="Medium"
                           Foreground="#1F2937"
                           Margin="0,0,0,8"/>
                
                <TextBox Text="{Binding Email}"
                         Watermark="Enter your email"
                         Height="48"
                         Padding="16,12"
                         FontSize="14"
                         BorderBrush="#E5E7EB"
                         BorderThickness="1"
                         CornerRadius="8"
                         Background="White"
                         Margin="0,0,0,16"/>

                <!-- Password Field -->
                <TextBlock Text="Password" 
                           FontSize="14"
                           FontWeight="Medium"
                           Foreground="#1F2937"
                           Margin="0,0,0,8"/>
                
                <TextBox Text="{Binding Password}"
                         Watermark="Enter your password"
                         PasswordChar="●"
                         Height="48"
                         Padding="16,12"
                         FontSize="14"
                         BorderBrush="#E5E7EB"
                         BorderThickness="1"
                         CornerRadius="8"
                         Background="White"
                         Margin="0,0,0,16"/>

                <!-- Remember Me and Forgot Password -->
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <CheckBox Grid.Column="0"
                              IsChecked="{Binding RememberMe}"
                              Content="Remember me"
                              FontSize="14"
                              Foreground="#1F2937"
                              Margin="0"/>
                    
                    <Button Grid.Column="1"
                            Content="Forgot password?"
                            Command="{Binding ForgotPasswordCommand}"
                            Classes="link"
                            FontSize="14"/>
                </Grid>

                <!-- Sign In Button -->
                <Button Height="48"
                        Classes="primary"
                        CornerRadius="8"
                        FontSize="14"
                        Margin="0,8,0,16"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Command="{Binding SignInCommand}"
                        IsEnabled="{Binding IsLoading, Converter={x:Static BoolConverters.Not}}">
                    
                    <Button.Styles>
                        <Style Selector="Button:disabled">
                            <Setter Property="Background" Value="#9CA3AF"/>
                        </Style>
                    </Button.Styles>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="⏳" 
                                   FontSize="14" 
                                   Margin="0,0,8,0"
                                   IsVisible="{Binding IsLoading}"/>
                        <TextBlock Text="Signing in..." 
                                   FontSize="14"
                                   IsVisible="{Binding IsLoading}"/>
                        <TextBlock Text="Sign In" 
                                   FontSize="14"
                                   IsVisible="{Binding IsLoading, Converter={x:Static BoolConverters.Not}}"/>
                    </StackPanel>
                </Button>

                <!-- Sign Up Link -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Don't have an account? "
                               FontSize="14"
                               Foreground="#6B7280"/>
                    <Button Content="Sign up"
                            Command="{Binding SignUpCommand}"
                            Classes="link"
                            FontSize="14"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl> 